MODULE EXIT INPUT.

  PERFORM EXIT_0010.

  CASE OK_CODE.
     WHEN 'BACK'.
        LEAVE TO SCREEN 0.
     WHEN 'EXIT' OR 'CANC'.
        LEAVE PROGRAM.
    ENDCASE.

ENDMODULE.
